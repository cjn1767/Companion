<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/lhu_eagle"
    tools:context="student.application.lhu_companion.EventsActivity_">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap on an Event to see its information"
                android:paddingBottom="12dp"
                android:textSize="18dp"
                android:textStyle="italic"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/black"/>

            <!-- activity_info layout file -->
            <!-- Clickable title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cosTitle"
                android:text="Celebration Of Scholarships"
                android:background="@drawable/underline"
                android:paddingBottom="12dp"
                android:textSize="22dp"
                android:textStyle="bold"


                android:textColor="@color/black"/>

            <TextView
                android:textSize="20dp"
                android:autoLink="web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="12dp"
                android:id="@+id/txt_cos_info"
                android:textColor="@color/black"
                android:text="4/20/2016 \n \nLock Haven University is proud to announce its ninth annual Celebration of Scholarship. The Celebration of Scholarship showcases academic research and artistic accomplishments by the University's students and faculty. Check out the schedule of events for the day! \n\nhttp://www.lhup.edu/students/cos/schedule.html"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deadTitle"
                android:text="Movie Screening: Deadpool"
                android:background="@drawable/underline"
                android:paddingBottom="12dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:textColor="@color/black"/>

            <TextView
                android:textSize="20dp"
                android:autoLink="web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="12dp"
                android:id="@+id/txt_dead_info"
                android:textColor="@color/black"
                android:text="4/22/2016\n7:00PM\nPrice Auditorium\n\nWade Wilson (Ryan Reynolds) is a former Special Forces operative who now works as a mercenary. His world comes crashing down when evil scientist Ajax (Ed Skrein) tortures, disfigures and transforms him into Deadpool."
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/danceTitle"
                android:text="LHU Dance Concert"
                android:background="@drawable/underline"
                android:paddingBottom="12dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="toggle_contents"
                android:textColor="@color/black"/>

            <TextView
                android:textSize="20dp"
                android:autoLink="web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="12dp"
                android:id="@+id/txt_dance_info"
                android:textColor="@color/black"
                android:text="4/23/2016\n3:00PM and 7:00PM\nSloan Auditorium\n\n"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
